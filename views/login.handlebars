{{!

login form handlebar template

}}

<div class="container">
  <div class="background">
    <img src="public/Images/landingPageImg.jpg" alt="dog" class="background" />
  </div>

  <nav class="nav">
    <img src="public/Images/logo.jpg" alt="dog logo" class="logo" />
    <button class="login-button">Login</button>
  </nav>

  <div class="overlay-bg">
  </div>
  <div class="login-popup">
    <header>
      <h1>Login</h1>
    </header>
    <section>
      <form action="/login" method="post" id="login-form">
        <label for="login-email-input">Enter your email to login</label>
        <input type="email" id="login-email-input" name="login-email-input" />
        <label for="login-password-input">Enter your password</label>
        <input
          type="password"
          name="login-password-input"
          id="login-password-input"
        />
        <input type="submit" class="submit-btm-login" />
        <img src="public/Images/login-popup.jpg" alt="man walking dog" />
      </form>
    </section>
  </div>

</div>
<script src="../public/js/login_signup.js"></script>