            <label for={{_id}}><strong>Name:</strong>
            {{firstName}}
            {{lastName}}<br />
            <strong>Email:</strong>
            {{email}}<br />
            <strong>Location:</strong>
            {{location.streetAddress}}
            {{location.city}}
            {{location.state}}
            {{location.zip}}<br />
            <strong>Services Offered:</strong>
            {{servicesOffered}}<br />
            </label><br />
          </li>
