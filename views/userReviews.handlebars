<nav class="nav">
  <a href="/home"><img
      src="public/Images/logo.jpg"
      alt="dog logo"
      class="logo"
    /></a>
  <a href="/logout"><button class="login-button">Logout</button></a>
</nav>

<p>Your reviews:</p>
<div class="edit-review-container">

  {{#each gInfo}}
    <span class="editReview-name">Review for The Guardian: {{firstName}}</span>
    <p style="display: none;">{{_id}}</p>
  {{/each}}

  {{#each userReviews}}
    <span class="editReview-rating" rating>
      Rating:
      {{rating}}
      | Review:
      {{review}}
      <button class="edit-rating" id="{{_id}}">Edit your rating</button>
    </span>
  {{/each}}

</div>

<form
  id="updateReviewForm"
  style="display: none;"
  action="/guardian"
  method="post"
>
  <label for="rating">Rating:</label>
  <input type="number" name="rating" id="rating" min="1" max="5" required />

  <label for="review">Review:</label>
  <textarea
    name="review"
    id="review"
    rows="4"
    required
    placeholder="Enter you review for the selected guardian"
  ></textarea>

  <button type="submit">Submit Review</button>
</form>

<script src="public/js/updatingReviews.js"></script>